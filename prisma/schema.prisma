generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CardStatus {
  TODO       
  DOING      
  DONE       
  URGENT     
}

model Board {
  id    Int    @id @default(autoincrement())
  name  String @unique
  cards Card[]
}

model Card {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  status      CardStatus @default(TODO)
  boardId     Int
  board       Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@unique([boardId, title]) 
}