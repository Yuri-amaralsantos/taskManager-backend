generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id    Int    @id @default(autoincrement())
  name  String @unique
  cards Card[]
}

model Card {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  boardId     Int
  board       Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@unique([boardId, title]) 
}